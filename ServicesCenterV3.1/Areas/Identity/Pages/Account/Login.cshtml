@page
@model LoginModel

@{
    ViewData["Title"] = "Увійти";
    
}
<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <section class="p-5 border rounded shadow-sm bg-white">
            <form id="account" method="post">
                <h2 class="text-center mb-4">Увійдіть до свого облікового запису</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Електронна пошта</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Пароль</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="mb-3 form-check">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label asp-for="Input.RememberMe" class="form-check-label">
                        Запам'ятати мене
                    </label>
                </div>

                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Увійти</button>
                </div>

                <div class="mt-3 text-center">
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary">Реєстрація нового користувача</a>
                    </p>
                    <p>
                        <a href="#" class="text-muted">Забули пароль?</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        background-color: #f4f4f4;
    }

    h1, h2 {
        color: #333;
        font-family: 'Arial', sans-serif;
    }

    .border {
        border: 1px solid #dee2e6;
    }

    .shadow-sm {
        box-shadow: 0 .125rem .25rem rgba(0, 0, 0, .075) !important;
    }

    .bg-white {
        background-color: #ffffff !important;
    }

    .form-floating .form-control {
        border-radius: 0.5rem;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    .form-control:focus {
        border-color: #0056b3;
        box-shadow: 0 0 0 0.2rem rgba(0, 86, 179, .25);
    }

    .btn-primary {
        background-color: #0056b3;
        border: none;
        transition: background-color 0.3s ease;
        border-radius: 0.5rem;
    }

    .btn-primary:hover {
        background-color: #004494;
    }

    .text-primary {
        color: #0056b3 !important;
        transition: color 0.3s ease;
    }

    .text-primary:hover {
        text-decoration: underline;
    }

    .text-muted {
        color: #6c757d;
    }

    .text-muted a {
        color: inherit;
        transition: color 0.3s ease;
    }

    .text-muted a:hover {
        color: #0056b3;
        text-decoration: underline;
    }
</style>
