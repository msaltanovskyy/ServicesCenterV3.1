@page
@model LockoutModel
@{
    ViewData["Title"] = "Заблоковано!";
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .lockout-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
    }

    .lockout-header {
        text-align: center;
        margin-bottom: 20px;
    }

    .lockout-message {
        font-size: 1.2em;
        color: #dc3545; /* Bootstrap danger color */
    }

    .btn {
        margin-top: 20px;
    }
</style>

<body>
    <div class="lockout-container">
        <div class="lockout-header">
            <h1 class="text-danger">@ViewData["Title"]</h1>
            <p class="lockout-message">Ваш обліковий запис заблокований. Будь ласка, спробуйте ще раз пізніше.</p>
        </div>
        <a href="/" class="btn btn-primary">Повернутися на головну</a>
    </div>
</body>
