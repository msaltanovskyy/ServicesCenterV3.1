@model ServicesCenterV3._1.ViewModels.InvoiceDetailsViewModel

<div class="invoice-details card shadow p-4 mb-5 bg-white rounded">
    <h2 class="text-center mb-4">Чек № @Model.Invoice.InvoiceId</h2>

    <div class="order-info card mb-4 p-3">
        <h4 class="card-title">Інформація про замовлення</h4>
        <p><strong>Номер замовлення:</strong> @Model.Order.OrderId</p>
        <p><strong>Ціна замовлення:</strong> @Model.Invoice.InvoicePrice.ToString("C2")</p>
    </div>

    <div class="spare-parts-info card mb-4 p-3">
        <h4 class="card-title">Використані деталі</h4>
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Назва деталі</th>
                    <th>Ціна деталі</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var spare in Model.Spares)
                {
                    <tr>
                        <td>@spare.SpareName</td>
                        <td>@spare.SpareCost.ToString("C2")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="total-cost card p-3">
        <h4 class="text-end">Загальна вартість: <span class="text-primary">@Model.Invoice.InvoicePrice.ToString("C2")</span></h4>
    </div>
</div>
